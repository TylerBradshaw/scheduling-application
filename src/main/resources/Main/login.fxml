<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="397.0" prefWidth="300.0" scaleShape="false" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <effect>
      <InnerShadow />
   </effect>
   <children>
      <Label fx:id="header" alignment="TOP_LEFT" prefHeight="45.0" prefWidth="257.0" text="Log In">
         <font>
            <Font name="Wingdings" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="username" promptText="Username" />
      <TextField fx:id="password" promptText="Password" />
      <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#loginButtonClicked" text="Log In" />
      <Label fx:id="timezoneLabel" text="Time Zone:" />
      <Label fx:id="timezoneToSet" text="Label" />
   </children>
</VBox>
